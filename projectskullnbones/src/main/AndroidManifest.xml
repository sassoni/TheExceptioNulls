<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theexceptionulls.projectskullnbones">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CardsGridActivity"
            android:label="@string/title_activity_cards_grid" >
        </activity>
        <activity
            android:name=".AddCardActivity"
            android:label="@string/title_activity_add_card" >
        </activity>
        <activity android:name=".zxing.scanner."
                  android:screenOrientation="landscape"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                  android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
    </application>

</manifest>
