<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/offer_notification_thanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/offer_notification_thanks"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/offer_notification_savings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offer_notification_thanks"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text=""
        android:textSize="16sp" />

    <TextView
        android:id="@+id/offer_notification_newoffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offer_notification_savings"
        android:gravity="left"
        android:text="@string/offer_notification_newoffers"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/offer_notification_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/offer_notification_newoffers"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>