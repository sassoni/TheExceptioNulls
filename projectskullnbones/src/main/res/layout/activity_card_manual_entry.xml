<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background">

    <LinearLayout
        android:id="@+id/card_manual_entry_retailer_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_manual_entry_retailer_logo_imageview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/card_manual_entry_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_manual_entry_retailer_logo"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/card_manual_entry"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/card_manual_entry_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_manual_entry_help"
        android:layout_margin="16dp"
        android:inputType="phone"
        android:imeOptions="actionDone"/>

</RelativeLayout>