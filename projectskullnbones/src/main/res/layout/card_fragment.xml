<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card_fragment_retailer_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_fragment_retailer_logo_imageview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <ScrollView
        android:id="@+id/card_fragment_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_fragment_retailer_logo"
        android:background="#efefef"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_fragment_barcode_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#FFFFFF"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/card_fragment_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_fragment_barcode_image"
                android:background="@android:color/white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="2210590929072"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/card_fragment_card_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_fragment_card_number"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                >

                <ImageView
                    android:id="@+id/card_fragment_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/i_camera"
                    />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>